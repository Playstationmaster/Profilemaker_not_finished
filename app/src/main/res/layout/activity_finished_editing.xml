<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_finished_editing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.playstationmaster.profilemaker.FinishedEditing">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/together_icon_200x200"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/mainPhoto" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/developlanet_logo_200x50"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView4" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/mainPhoto"
        android:layout_above="@+id/imageView4">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="  Name : "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView"
                android:textSize="24sp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_above="@+id/textView2"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Name"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/DisplayName"
                android:textSize="24sp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_above="@+id/textView2"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="  Age : "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView"
                android:textSize="24sp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_above="@+id/textView2"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="1818181818"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/DisplayAge"
                android:textSize="24sp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_above="@+id/textView2"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="  Gender : "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView"
                android:textSize="24sp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_above="@+id/textView2"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="IDK"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/DisplayGender"
                android:textSize="24sp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_above="@+id/textView2"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="  E-mail : "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView"
                android:textSize="24sp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_above="@+id/textView2"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Iwork@home.com"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/DisplayEmailAddress"
                android:textSize="24sp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_above="@+id/textView2"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>